<h2>Your cart1</h2>

<%= @items.inspect  %>
<br />
<%= @test %>

<table class="table table-striped">
	<thead>
	<tr>
	  <th>#</th>
	  <th>Name</th>
	  <th>Price</th>
	  <th>Qty</th>
	</tr>
	</thead>
	<tbody>
	
	<% total_price = 0 %>	
	<% total_qty = 0 %>
	<% @items.each_with_index do |item, i| %>
		<% i += 1%>
		<tr>
		  <th><%= i %></th>
		  <td><%= item[0].title %></td>
		  <td><%= item[0].price %></td>
		  <td><%= item[1] %></td>
		</tr>
		<% total_price += item[0].price * item[1].to_i %>	
		<% total_qty += item[1].to_i %>
	<% end %>
	<tr>
		  <th></th>
		  <td></td>
		  <td>Total: <%= total_price %> Rub</td>
		  <td><%= total_qty %></td>
		</tr>
	</tbody>
</table>

 
<form active="/order" method="post">

	<input name="order[orders_input]" type="hidden" value="<%= @orders_input %>">

	<div class="form-group">
	<label>Name</label>
	<input name="order[name]" type="text" class="form-control" id="" placeholder="Your Name">
	</div>
	<div class="form-group">
	<label>Phone</label>
	<input name="order[phone]" type="text" class="form-control" id="" placeholder="Your Phone">
	</div>
	<div class="form-group">
	<label>Adress</label>
	<textarea name="order[adress]" class="form-control" id="" placeholder="Delivery Adress"></textarea>
	</div>
	  	

	<button class="btn btn-success btn-lg">Place this order!</button>

</form>